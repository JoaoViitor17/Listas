#include <stdio.h>
#define n 3
int main() {
	int mat[n][n], i, j;
	
	printf("\n - digite os valores de cada posicao da matriz:\n");
	
	for ( i = 0; i < n; i++) {
		for ( j = 0; j < n; j++) {
			printf("\n posicao [%i][%i]: ", i, j);
			scanf("%i", &mat[i][j]);
		}
	}
	for ( i = 0; i < n; i++) {
		printf("\n");
		for ( j = 0; j < n; j++) {
			printf(" [%i] ", (3 * mat[i][j]));
		}
	}
  return 0;
}
