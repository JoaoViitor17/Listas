#include <stdio.h>
#define lin 3
#define col 3
int main() {
	int mat[lin][col], i, j;
	
	printf("\n - digite os valores de cada posicao da matriz:\n");
	
	for ( i = 1; i <= lin; i++) {
		
		for ( j = 1; j <= col; j++) {
			printf("\n posicao [%i][%i]: ", i, j);
			scanf("%i", &mat[i][j]);
		}
	}
	for ( i = 1; i <= lin; i++) {
		printf("\n");
		for ( j = 1; j <= col; j++) {
			printf(" [%i] ", (3 * mat[i][j]));
		}
	}
  return 0;
}
