#include <stdio.h>
#define lin 4
#define col 4
int main() {
	int mat[lin][col], i, j;
	
	for ( i = 1; i <= lin; i++) {
		printf("\n");
		
		for ( j = 1; j <= col; j++) {
			if ( i == j) {
				mat[i][j] = (3*1 - 1);
		    } else if ( i < j) {
				mat[i][j] = (2*i) + (7*j) - 2;
			} else if ( i > j) {
				mat[i][j] = (4*i) - (5*j*2);
			}
		}
	}
	for ( i = 1; i <= lin; i++) {
		printf("\n");
		for ( j = 1; j <= col; j++) {
			printf(" [%i] ", mat[i][j]);
		}
	}
  	return 0;
}
