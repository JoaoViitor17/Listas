#include <stdio.h>
#define col 5
#define lin 5
int main() {
	int mat [lin] [col], i, j, somal4 = 0, somac2 = 0, somadgp = 0, somag = 0;

	printf("\n - digite os valores de cada posicao da matriz:\n");
	
	for ( i = 1; i <= lin; i++) {
		
		for ( j = 1; j <= col; j++) {
			printf("\n posicao [%i][%i]: ", i, j);
			scanf("%i", &mat[i][j]);
			if (i == 4) {
				somal4 += mat[i][j];
			}
			if (j == 2) {
				somac2 += mat[i][j];
			}
			if (i == j) {
				somadgp += mat[i][j];
			}
			somag += mat[i][j];
		}
	}
	
	for ( i = 1; i <= lin; i++) {
		printf("\n");
		for ( j = 1; j <= col; j++) {
			printf(" %i ", mat[i][j]);
		}
	}

	printf("\n\n - soma da linha 4: %i"
		"\n - soma da coluna 2: %i"
		"\n - soma da diagonal principal: %i"
		"\n - soma geral dos elementos: %i", somal4, somac2, somadgp, somag);
	return 0;
}
