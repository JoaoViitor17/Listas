#include <stdio.h>

int main() {
    int linha, coluna, cont_linha, cont_coluna;
    printf("\n - Estamos fazendo uma matriz, digite a quantidade de linhas:"
           "\n  --> ");
    scanf("%i", &linha);
    printf("\n - Digite a quantidade de colunas:"
           "\n  --> ");
    scanf("%i", &coluna);
    printf("\n##################################################\n"
           "\n");
    for ((cont_linha = 1) && (cont_coluna = 1); (cont_linha <= linha); (cont_linha++) && (cont_coluna = 1)){
        printf("\n");
        while (cont_coluna <= coluna) {
            printf("   a%i%i", cont_linha, cont_coluna);
            cont_coluna++;
        }
        printf("\n");
    }
    printf("\n\n##################################################\n"
           "\n");
  return 0;
}
